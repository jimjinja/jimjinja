{
  "name": "jimjinja",
  "version": "0.0.1",
  "description": "IoT",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "lint:fixdry": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix-dry-run src test",
    "build": "electron-packager . --out=dist --asar --overwrite --all",
    "build:darwin": "electron-packager . --out=dist --asar --overwrite --platform=darwin --arch=x64",
    "compress": "cd dist; for file in `ls`; do zip -r -y $file.zip $file; done"
  },
  "repository": "https://github.com/jimjinja/jimjinja",
  "keywords": [
    "electron",
    "iot",
    "jimjinja"
  ],
  "author": "Jingun Jung",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron-packager": "^10.1.1",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-friendly-formatter": "^3.0.0",
    "babel-eslint": "^8.2.1",
    "eslint-plugin-html": "^4.0.1"    
  },
  "dependencies": {
    "electron": "^1.7.10"
  }
}
